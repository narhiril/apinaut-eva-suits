<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>ApiEva_ApitechEvaHelmet</defName>
    <label>Apitech EVA Helmet</label>
    <description>This helmet is made from a beeswax-plasteel metamaterial, making it light, strong, and slightly fragrant.  It's perfect for any Apini who might - hypothetically - want to visit the moon in order to confirm that it's made of wax.</description>
	<generateCommonality>0</generateCommonality>
	<tradeability>Sellable</tradeability>
    <techLevel>Spacer</techLevel>
	<graphicData>
		<texPath>Things/Apparel/ApitechEVAHelmet_south</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>FabricationBench</li> <!--change this-->
		</recipeUsers>
    </recipeMaker>
	<statBases>
		<WorkToMake>21000</WorkToMake>
		<MaxHitPoints>115</MaxHitPoints>
		<Mass>1.7</Mass>
		<Flammability>0.5</Flammability>
		<ArmorRating_Sharp>0.90</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
		<ArmorRating_Heat>0.55</ArmorRating_Heat>
		<Insulation_Cold>60</Insulation_Cold>
		<Insulation_Heat>25</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
    <equippedStatOffsets>
		<MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <costList>
		<ComponentSpacer>2</ComponentSpacer>
		<Plasteel>35</Plasteel>
		<ApiniWax>15</ApiniWax>
    </costList>
	<apparel>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Apparel/ApitechEVAHelmet</wornGraphicPath> <!--change this-->
		<useWornGraphicMask>true</useWornGraphicMask>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>Spacer</li>
			<li>EVA</li>
			<li>Bee</li>
		</tags>
		<defaultOutfitTags>
		</defaultOutfitTags>
	</apparel>
  </ThingDef>
  
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>ApiEva_HoneyglassEvaHelmet</defName>
    <label>Honeyglass Bubble EVA Helmet</label>
    <description>Made through a secret process involving synthread and honey, this bubble-like full helmet also incorporates pressure seals for use in extreme temperatures or vacuum environments.  While comfortable and fun to wear, the bubble's unmatched visibility comes at the cost of very little physical protection.</description>
	<generateCommonality>1</generateCommonality>
	<tradeability>Sellable</tradeability>
    <techLevel>Spacer</techLevel>
	<graphicData>
		<texPath>Things/Apparel/HoneyglassBubbleEVAHelmet_south</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>TableMachining</li>
		</recipeUsers>
    </recipeMaker>
	<statBases>
		<WorkToMake>7000</WorkToMake>
		<MaxHitPoints>90</MaxHitPoints>
		<Mass>2.9</Mass>
		<Flammability>0.5</Flammability>
		<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.15</ArmorRating_Blunt>
		<ArmorRating_Heat>0.55</ArmorRating_Heat>
		<Insulation_Cold>60</Insulation_Cold>
		<Insulation_Heat>45</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
    <equippedStatOffsets>
		<MoveSpeed>-0.04</MoveSpeed>
		<PsychicSensitivity>-0.125</PsychicSensitivity>
    </equippedStatOffsets>
    <costList>
		<ComponentIndustrial>2</ComponentIndustrial>
		<ApiniHoney>50</ApiniHoney>
		<Synthread>5</Synthread>
    </costList>
	<apparel>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Apparel/HoneyglassBubbleEVAHelmet</wornGraphicPath>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>Spacer</li>
			<li>EVA</li>
			<li>Bee</li>
		</tags>
		<defaultOutfitTags>
		</defaultOutfitTags>
	</apparel>
  </ThingDef>

</Defs>