<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="ArmorMachineableBase">
	<defName>ApiEva_ApinautEvaSuit</defName>
	<label>Apinaut's EVA Suit</label>
    <description>A painstakinly-woven pressure suit made from beeswax and plasteel fibers.  It provides ample protection against the vacuum of space - though, sadly, none whatsoever against the accompanying existential dread.\n\n\nIn space, no one can hear you make bee noises.</description>
	<generateCommonality>0</generateCommonality>
	<tradeability>Sellable</tradeability> 
	<techLevel>Spacer</techLevel>
    <graphicData>
		<texPath>Things/Apparel/ApinautEVASuit_icon</texPath>
		<graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False"> <!--change this-->
			<li>FabricationBench</li>
		</recipeUsers>
	</recipeMaker>
    <statBases
		<WorkToMake>40000</WorkToMake>
		<MaxHitPoints>225</MaxHitPoints>
		<Mass>12.5</Mass>
		<ArmorRating_Sharp>0.85</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
		<ArmorRating_Heat>0.55</ArmorRating_Heat>
		<Insulation_Cold>100</Insulation_Cold>
		<Insulation_Heat>25</Insulation_Heat>
		<EquipDelay>8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
		<MoveSpeed>-0.15</MoveSpeed>
		<WorkSpeedGlobal>-0.1</WorkSpeedGlobal>
    </equippedStatOffsets>
    <thingCategories>
		<li>Apparel</li>
    </thingCategories>
    <costList>
		<ComponentSpacer>2</ComponentSpacer>
		<Plasteel>85</Plasteel>
		<ApiniWax>50</ApiniWax>
    </costList>
	<apparel>
		<bodyPartGroups>
			<li>Neck</li>
			<li>Torso</li>
			<li>InsectWings</li>
			<li>Shoulders</li>
			<li>Arms</li>
			<li>Hands</li>
			<li>Abdomen</li>
			<li>Legs</li>
			<li>Feet</li>
			<!--li>InsectSting</li-->
		</bodyPartGroups>
		<wornGraphicPath>Things/Apparel/ApinautEVASuit</wornGraphicPath>
		<layers>
			<li>Middle</li>
			<li>Shell</li>
		</layers>
		<tags>
			<li>Spacer</li>
			<li>EVA</li>
			<li>Bee</li>
		</tags>
		<defaultOutfitTags>
		</defaultOutfitTags>
    </apparel>
	<modExtensions>
		<li Class="WaterIsCold.WetGear">
			<wetSuit>true</wetSuit>
			<rainSuit>true</rainSuit>
		</li>
	</modExtensions>
  </ThingDef>
  
  </Defs>