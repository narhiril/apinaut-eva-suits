<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>ApiEva_ApinautEvaHelmet</defName>
    <label>Apinaut's EVA Helmet</label>
    <description>This helmet is made from a beeswax-plasteel metamaterial, making it light, strong, and slightly fragrant.  It's perfect for any Apini who might - hypothetically - want to visit the moon in order to confirm that it's made of wax.</description>
	<generateCommonality>0.2</generateCommonality>
	<tradeability>Sellable</tradeability>
    <techLevel>Spacer</techLevel>
	<graphicData>
		<texPath>Things/Apparel/ApinautEVAHelmet_icon</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
		<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		<researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<recipeUsers Inherit="False">
			<li>FabricationBench</li> <!--change this-->
		</recipeUsers>
    </recipeMaker>
	<statBases>
		<WorkToMake>21000</WorkToMake>
		<MaxHitPoints>115</MaxHitPoints>
		<Mass>1.7</Mass>
		<Flammability>0.5</Flammability>
		<ArmorRating_Sharp>0.90</ArmorRating_Sharp>
		<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
		<ArmorRating_Heat>0.55</ArmorRating_Heat>
		<Insulation_Cold>60</Insulation_Cold>
		<Insulation_Heat>25</Insulation_Heat>
		<EquipDelay>4</EquipDelay>
	</statBases>
    <equippedStatOffsets>
		<MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <costList>
		<ComponentSpacer>2</ComponentSpacer>
		<Plasteel>35</Plasteel>
		<ApiniWax>15</ApiniWax>
    </costList>
	<apparel>
		<bodyPartGroups>
			<li>FullHead</li>
		</bodyPartGroups>
		<wornGraphicPath>Things/Apparel/ApinautEVAHelmet</wornGraphicPath> <!--change this-->
		<useWornGraphicMask>true</useWornGraphicMask>
		<layers>
			<li>Overhead</li>
		</layers>
		<tags>
			<li>Spacer</li>
			<li>EVA</li>
			<li>Bee</li>
		</tags>
		<defaultOutfitTags>
		</defaultOutfitTags>
	</apparel>
  </ThingDef>
  
  <ThingDef ParentName="ArmorHelmetMakeableBase">
